<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="connection.url">jdbc:mysql://localhost/movie_theatre?serverTimezone=EET</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">1234</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="com.dev.movietheatre.model.Movie"/>
        <mapping class="com.dev.movietheatre.model.MovieSession"/>
        <mapping class="com.dev.movietheatre.model.CinemaHall"/>
        <mapping class="com.dev.movietheatre.model.User"/>
        <mapping class="com.dev.movietheatre.model.ShoppingCart"/>
        <mapping class="com.dev.movietheatre.model.Ticket"/>
        <mapping class="com.dev.movietheatre.model.Order"/>
    </session-factory>
</hibernate-configuration>
